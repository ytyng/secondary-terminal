{
  "name": "secondary-terminal",
  "displayName": "Secondary Terminal",
  "description": "Terminal in sidebar",
  "version": "0.16.188",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartup"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "terminalContainer",
          "title": "Secondary Terminal",
          "icon": "$(terminal)"
        }
      ]
    },
    "views": {
      "terminalContainer": [
        {
          "type": "webview",
          "id": "secondaryTerminalMainView",
          "name": "Terminal",
          "icon": "$(terminal)"
        }
      ]
    },
    "commands": [
      {
        "command": "secondaryTerminal.focus",
        "title": "Focus Terminal",
        "category": "Secondary Terminal"
      },
      {
        "command": "secondaryTerminal.clear",
        "title": "Clear Terminal",
        "category": "Secondary Terminal"
      },
      {
        "command": "secondaryTerminal.sendMainEditorSelection",
        "title": "Send Main Editor Selection to Secondary Terminal",
        "category": "Secondary Terminal"
      },
      {
        "command": "secondaryTerminal.sendMainTerminalSelection",
        "title": "Send Main Terminal Selection to Secondary Terminal",
        "category": "Secondary Terminal"
      },
      {
        "command": "secondaryTerminal.copyMainEditorSelection",
        "title": "Copy Main Editor Selection with Location",
        "category": "Secondary Terminal"
      },
      {
        "command": "secondaryTerminal.copyMainTerminalSelection",
        "title": "Copy Main Terminal Selection with Location",
        "category": "Secondary Terminal"
      },
      {
        "command": "secondaryTerminal.restart",
        "title": "Restart Terminal",
        "category": "Secondary Terminal",
        "icon": "$(refresh)"
      },
      {
        "command": "secondaryTerminal.showLogs",
        "title": "Show Logs",
        "category": "Secondary Terminal",
        "icon": "$(output)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "secondaryTerminal.restart",
          "when": "view == secondaryTerminalMainView",
          "group": "navigation"
        },
        {
          "command": "secondaryTerminal.showLogs",
          "when": "view == secondaryTerminalMainView",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "secondaryTerminal.sendMainEditorSelection",
        "key": "cmd+l",
        "when": "editorTextFocus"
      },
      {
        "command": "secondaryTerminal.sendMainTerminalSelection",
        "key": "cmd+l",
        "when": "terminalFocus"
      },
      {
        "command": "secondaryTerminal.copyMainEditorSelection",
        "key": "cmd+shift+l",
        "when": "editorTextFocus"
      },
      {
        "command": "secondaryTerminal.copyMainTerminalSelection",
        "key": "cmd+shift+l",
        "when": "terminalFocus"
      }
    ],
    "configuration": {
      "title": "Secondary Terminal",
      "properties": {
        "secondaryTerminal.startupCommands": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "ターミナル起動時に自動実行するコマンド一覧"
        },
        "secondaryTerminal.maxHistoryLines": {
          "type": "number",
          "default": 1000,
          "minimum": 50,
          "description": "ターミナルの履歴として保持する最大行数 (xterm の scrollback とセッション復元バッファに適用)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run update-version && npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "dev": "tsc -watch -p ./",
    "clean": "rm -rf out/",
    "rebuild": "npm ci && npm run clean && npm run compile",
    "update-version": "node scripts/update-version.js",
    "increment-version": "npm version patch && npm run update-version"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@xterm/addon-unicode11": "^0.8.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "ace-builds": "^1.43.2"
  }
}
